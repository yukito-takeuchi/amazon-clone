# Server
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@postgres:5432/amazon_clone

# CORS
CORS_ORIGIN=http://localhost:3000

# Firebase Admin SDK
# Option 1: 個別の環境変数で設定（開発環境推奨）
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Option 2: JSONファイル全体を環境変数に設定（本番環境推奨）
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}

# Firebase Web API Key (for REST API authentication)
FIREBASE_WEB_API_KEY=your-web-api-key

# Google Cloud Storage（本番環境のみ）
GCS_BUCKET_NAME=your-bucket-name
# Option 1: JSONファイルパス
# GCS_KEY_FILE=./path/to/gcs-keyfile.json
# Option 2: JSON全体を環境変数に
# GCS_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}

# API URL（画像アップロード用）
API_URL=http://localhost:3001

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
FRONTEND_URL=http://localhost:3000
